<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Convertisseur V2" Height="350" Width="450" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="CHAÎNE À CONVERTIR (1-8 CHARS)" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="InputBox" Height="35" VerticalContentAlignment="Center" FontSize="14"/>

            <Button Content="CONVERTIR EN MAJUSCULES" Margin="0,20" Height="45" 
                    Background="#007ACC" Foreground="White" FontWeight="Bold"
                    Click="OnConvertClick"/>

            <TextBlock Text="RÉSULTAT AFFICHÉ" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="ResultBox" Height="35" IsReadOnly="True" 
                     Background="#F0F0F0" VerticalContentAlignment="Center" FontSize="14"/>

            <TextBlock x:Name="ErrorLabel" Foreground="Red" Margin="0,10,0,0" TextAlignment="Center" FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>